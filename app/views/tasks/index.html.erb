<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task|%>
    <li>
      <% if task.completed %>
        <%= link_to task_path(task), method: :patch do %>
          <i class="fas fa-check-square"></i>
        <% end %>
      <% else %>
        <%= link_to task_path(task), method: :patch do %>
        <i class="fa-regular fa-square"></i>
        <% end %>
      <% end %>
      <%= link_to task.title, task_path(task) %>
  </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
